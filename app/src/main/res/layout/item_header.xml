<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/header_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/channel_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/channel_number"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/activity_indicator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/channel_number"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/circle" />
    </RelativeLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@id/header_main"
        android:layout_alignTop="@id/header_main"
        android:layout_marginStart="@dimen/margin_item"
        android:layout_toEndOf="@id/header_main"
        android:background="#535353"
        android:visibility="visible" />
</RelativeLayout>